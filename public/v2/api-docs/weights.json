          "required": true
        }
      }
    },
    "Weight":{
      "id":"Weight",
      "properties":{
        "id":{
          "type":"long",
          "required": true
        },
        "date":{
          "type":"Date",
          "required": true
        },
        "user":{
          "type":"User",
          "required": true
        },
        "url":{
          "type":"string",
          "required": true
        },
        "icon_url":{
          "type":"string",
