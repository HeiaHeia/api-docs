{
  "apiVersion":"<%= api_version %>",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %><%= base_path %>",
  "resourcePath":"/sport_categories",
  "apis":[
    {
      "path":"/sport_categories",
      "description":"Operations about sport categories",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"List of sport categories",
          "responseClass":"List[CompactSportCategory]",
          "nickname":"index",
          "parameters":[
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/sport_categories/all",
      "description":"List of all sport categories",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"List of all sport categories",
          "responseClass":"List[SportCategory]",
          "nickname":"index_all",
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/sport_categories/{id}",
      "description":"Operations about sport categories",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find sport category by ID",
          "responseClass":"CompactSportCategory",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the sport category.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    },
    {
      "path":"/sport_categories/{sport_category_id}/sports",
      "description":"Operations about sports",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find sports by category ID",
          "responseClass":"Sport",
          "nickname":"index",
          "parameters":[
            {
              "name":"sport_category_id",
              "description":"The id of the sport category.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    }
  ],
  "models":<%= models('CompactSportCategory', 'SportCategory', 'Sport') %>
}
