<% param_list = path_params(resource) %>
{
  "path":"/<%= resource %>/comments",
  "description":"Operations about comments",
  "operations":[
    {
      "httpMethod":"GET",
      "summary":"Get list of comments",
      "responseClass":"List[Comment]",
      "nickname":"comments_index",
      "parameters":[
        <% param_list.each do |param| %>
          {
            "name":"<%= param %>",
            "paramType":"path",
            "dataType":"long",
            "required":true
          },
        <% end %>
        <%= param_page %>,
        <%= param_per_page %>
      ],
      "errorResponses":<%= responses(400) %>
    },
    {
      "httpMethod":"POST",
      "summary":"Add a new comment",
      "responseClass":"Comment",
      "nickname":"comments_create",
      "parameters":[
        <% param_list.each do |param| %>
          {
            "name":"<%= param %>",
            "paramType":"path",
            "dataType":"long",
            "required":true
          },
        <% end %>
        {
          "name":"notes",
          "paramType":"query",
          "dataType":"text",
          "required":true
        }
      ],
      "errorResponses":<%= responses(400, 403, 404) %>
    }
  ]
}
