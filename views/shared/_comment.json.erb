{
  "path":"/<%= resource %>/{<%= param_id %>}/comments",
  "description":"Operations about comments",
  "operations":[
    {
      "httpMethod":"GET",
      "summary":"Get list of comments",
      "responseClass":"List[Comment]",
      "nickname":"comments_index",
      "parameters":[
        {
          "name":"<%= param_id %>",
          "paramType":"path",
          "dataType":"long",
          "required":true
        },
        <%= param_page %>,
        <%= param_per_page %>
      ],
      "errorResponses":<%= responses(400) %>
    },
    {
      "httpMethod":"POST",
      "summary":"Add a new comment",
      "responseClass":"Comment",
      "nickname":"comments_create",
      "parameters":[
        {
          "name":"<%= param_id %>",
          "paramType":"path",
          "dataType":"long",
          "required":true
        },
        {
          "name":"notes",
          "paramType":"query",
          "dataType":"text",
          "required":true
        }
      ],
      "errorResponses":<%= responses(400, 403, 404) %>
    }
  ]
},
{
  "path":"/<%= resource %>/{<%= param_id %>}/comments/{id}",
  "description":"Operations about comment",
  "operations":[
    {
      "httpMethod":"DELETE",
      "summary":"Delete comment entry",
      "responseClass":"void",
      "nickname":"comments_destroy",
      "parameters":[
        {
          "name":"<%= param_id %>",
          "paramType":"path",
          "dataType":"long",
          "required":true
        },
        {
          "name":"id",
          "description":"ID of comment that needs to be deleted",
          "paramType":"path",
          "required":true,
          "dataType":"long"
        }
      ],
      "errorResponses":<%= responses(400, 403, 404) %>
    }
  ]
}
