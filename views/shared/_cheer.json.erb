<% param_list = path_params(resource) %>
{
  "path":"/<%= resource %>/cheers",
  "description":"Operations about cheers",
  "operations":[
    {
      "httpMethod":"GET",
      "summary":"Get list of cheers",
      "responseClass":"List[Cheer]",
      "nickname":"cheers_index",
      "parameters":[
        <% param_list.each do |param| %>
          {
            "name":"<%= param %>",
            "paramType":"path",
            "dataType":"long",
            "required":true
          },
        <% end %>
        <%= param_page %>,
        <%= param_per_page %>
      ],
      "errorResponses":<%= responses(400) %>
    },
    {
      "httpMethod":"POST",
      "summary":"Add a new cheer",
      "responseClass":"Cheer",
      "nickname":"cheer_create",
      "parameters":[
        <% param_list.each do |param| %>
          {
            "name":"<%= param %>",
            "paramType":"path",
            "dataType":"long",
            "required":true
          },
        <% end %>
        {
          "name":"cheer_type_id",
          "paramType":"query",
          "dataType":"int",
          "required":true
        }
      ],
      "errorResponses":<%= responses(400, 404) %>
    }
  ]
}
