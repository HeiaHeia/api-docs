{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/items",
  "apis":[
    {
      "path":"/items",
      "description":"Operations about items",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds items",
          "responseClass":"List[Item]",
          "nickname":"index",
          "parameters":[
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/items/agenda",
      "description":"Returns agenda items for calling user",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds agenda items",
          "responseClass":"List[Item]",
          "nickname":"agenda",
          "parameters":[
            {
              "name":"start_date",
              "description":"Fetch agenda starting from this date (inclusive)",
              "paramType":"path",
              "required":true,
              "dataType":"Date"
            },
            {
              "name":"end_date",
              "description":"Fetch agenda until this date (inclusive)",
              "paramType":"path",
              "required":true,
              "dataType":"Date"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/items/{id}",
      "description":"Operations about item",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find item by ID",
          "responseClass":"Item",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the item.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/items/years' } } %>
  ],
  "models":<%= models(params[:api_version], 'Item') %>
}
