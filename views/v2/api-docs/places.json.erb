{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/places",
  "apis":[
    {
      "path":"/places",
      "description":"Operations about places",
      "operations":[
        {
          "httpMethod":"POST",
          "summary":"Add a new place",
          "responseClass":"Place",
          "nickname":"create",
          "parameters":[
            {
              "name":"latitude",
              "description":"Latitude of the place, as accurate as is known.",
              "paramType":"form",
              "dataType":"double",
              "required":true
            },
            {
              "name":"longitude",
              "description":"Longitude of the place, as accurate as is known.",
              "paramType":"form",
              "dataType":"double",
              "required":true
            },
            {
              "name":"name",
              "description":"The name of the place.",
              "paramType":"form",
              "required":true,
              "dataType":"String"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/places/{id}",
      "description":"Operations about places",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find place by ID",
          "responseClass":"Place",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the place.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    },
    {
      "path":"/places/serach",
      "description":"Operations about places",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds places",
          "responseClass":"List[Place]",
          "nickname":"index",
          "notes":"The results ordered based on their distance from a given point.",
          "parameters":[
            {
              "name":"latitude",
              "description":"Latitude of the place, as accurate as is known.",
              "paramType":"form",
              "dataType":"double",
              "required":true
            },
            {
              "name":"longitude",
              "description":"Longitude of the place, as accurate as is known.",
              "paramType":"form",
              "dataType":"double",
              "required":true
            },
            {
              "name":"q",
              "description":"A search term to be applied against place names.",
              "paramType":"query",
              "dataType":"string"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    }
  ],
  "models":<%= models('Place') %>
}
