{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/training_logs",
  "apis":[
    {
      "path":"/training_logs",
      "description":"Operations about training logs",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds training logs",
          "notes":"Finds training logs",
          "responseClass":"List[TrainingLog]",
          "nickname":"index",
          "parameters":[
            <%= param_training_log_status %>,
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        },
        <%= erb :'shared/training_logs/_create.json' %>
      ]
    },
    {
      "path":"/training_logs/{id}",
      "description":"Operations about training logs",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find training log entry by ID",
          "notes":"Returns a training log entry based on ID",
          "responseClass":"TrainingLog",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"ID of training log that needs to be fetched",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":[
            {
              "code":404,
              "reason":"Record not found"
            }
          ]
        },
        {
          "httpMethod":"PUT",
          "summary":"Update an existing training log",
          "notes":"If you want approve entry, just update entry with status=regular.<br/>Allowed only one tag with type 'strain' for entry.",
          "responseClass":"TrainingLog",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "description":"ID of training log that needs to be updated",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            {
              "name":"status",
              "dataType":"string",
              "paramType":"form",
              "defaultValue":"regular",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "regular",
                  "planned"
                ]
              }
            },
            <%= param_date %>,
            {
              "name":"duration_h",
              "paramType":"form",
              "dataType":"int",
              "description":"Duration of the exercise - hours."
            },
            {
              "name":"duration_m",
              "paramType":"form",
              "dataType":"int",
              "description":"Duration of the exercise - minutes."
            },
            {
              "name":"duration_s",
              "paramType":"form",
              "dataType":"int",
              "description":"Duration of the exercise - seconds. Note: duration can be expressed in any format convenient to the user: e.g. 110 minutes and 1 h 50 minutes are both acceptable."
            },
            <%= param_notes %>,
            {
              "name":"mood",
              "paramType":"form",
              "dataType":"byte",
              "description":"A value from 0 to 5. Where 0 - no mood set, 1 - worst mood, 5 - best mood"
            },
            {
              "name":"calories",
              "paramType":"form",
              "dataType":"int",
              "description":"Calories spent during the exercise."
            },
            {
              "name":"avg_hr",
              "paramType":"form",
              "dataType":"int",
              "description":"Average heart rate."
            },
            {
              "name":"max_hr",
              "paramType":"form",
              "dataType":"int",
              "description":"Maximum heart rate."
            },
            {
              "name":"favourite",
              "paramType":"form",
              "dataType":"boolean"
            },
            {
              "name":"private",
              "paramType":"form",
              "dataType":"boolean"
            },
            {
              "name":"gpx",
              "paramType":"body",
              "dataType":"file",
              "description":"The file, support only GPX format."
            },
            <%= sport_param_values('distance') %>,
            <%= sport_param_values('score') %>,
            {
              "name":"exclude_stats",
              "paramType":"form",
              "dataType":"boolean"
            },
            <%= param_tags %>,
            <%= param_tags %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete training log entry",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of training log that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/training_logs/years' } } %>,
    <%= erb :'shared/_comment.json', { :locals => { :resource => 'training_logs/{training_log_id}' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => 'training_logs/{training_log_id}' } } %>
  ],
  "models":<%= models('TrainingLog', 'Cheer', 'Comment') %>
}
