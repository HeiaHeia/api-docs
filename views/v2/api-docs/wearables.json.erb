{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/wearables",
  "apis":[
    {
      "path":"/wearables",
      "description":"Operations for managing wearable device services",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Lists all available wearable device services and their current status information",
          "responseClass":"List[Wearable]",
          "nickname":"index",
          "parameters":[],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/wearables/{provider}",
      "description":"Operations for managing wearable device services",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find wearable device service by provider name",
          "responseClass":"Wearable",
          "nickname":"show",
          "parameters":[
            {
              "name":"provider",
              "description":"The name of the wearable provider.",
              "paramType":"path",
              "required":true,
              "dataType":"string"
            },
            {
              "name":"prepare_auth",
              "description":"When true the 'oauth_url' property will be available in response, allowing client to start the OAuth access grant flow.",
              "paramType":"query",
              "required":false,
              "dataType":"boolean"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Update the connection status of a wearable device service",
          "responseClass":"Wearable",
          "nickname":"update",
          "parameters":[
            {
              "name":"provider",
              "description":"The name of the wearable provider.",
              "paramType":"path",
              "required":true,
              "dataType":"string"
            },
            {
              "name":"status",
              "dataType":"string",
              "paramType":"form",
              "allowableValues":{
                "valueType":"LIST",
                "values":["disconnected", "requested", "connected"]
              }
            },
            {
              "name":"email",
              "paramType":"form",
              "dataType":"string",
              "description":"If 'status' is 'requested' this defines the user's email address in Polar."
            },
            {
              "name":"oauth_redirect_url",
              "paramType":"form",
              "dataType":"string",
              "description":"If 'status' is 'connected' this defines the URL the user was redirected to at the end of the OAuth flow."
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    }
  ],
  "models":<%= models(params[:api_version], 'Wearable') %>
}
