{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"http://localhost:4567/v2",
  "resourcePath":"/sports",
  "apis":[
    {
      "path":"/sports",
      "description":"Operations about sports",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds sports",
          "responseClass":"List[Sport]",
          "nickname":"index",
          "parameters":[
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/sports/{id}",
      "description":"Operations about sports",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find sport by ID",
          "responseClass":"Sport",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the sport.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    }
  ],
  "models":{
    "Sport":{
      "id":"Sport",
      "properties":{
        "id":{
          "type":"long",
          "required": true
        },
        "name":{
          "type":"string",
          "required": true
        },
        "icon_url":{
          "type": "string",
          "required": true
        },
        "planned_icon_url":{
          "type": "string",
          "required": true
        },
        "url":{
          "type":"string",
          "required": true
        },
        "sport_params":{
          "items":{
            "$ref":"SportParam"
          },
          "type":"Array"
        },
        "exclude_stats": {
          "required": true,
          "type":"boolean"
        },
        "updated_at":{
          "type":"DateTime",
          "required": true
        },
        "created_at":{
          "type":"DateTime",
          "required": true
        }
      }
    },
    "SportParam":<%= sport_param_model %>
  }
}
