{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/answers",
  "apis":[
    {
      "path":"/answers",
      "description":"Operations about answers",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds answers",
          "responseClass":"List[Answer]",
          "nickname":"index",
          "parameters":[
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        },
        {
          "httpMethod":"POST",
          "summary":"Add a new answer",
          "responseClass":"Answer",
          "nickname":"create",
          "parameters":[
            <%= param_survey_id %>,
            {
              "name":"values[][question_id]",
              "paramType":"form",
              "dataType":"<%= Const::LONG %>"
            },
            {
              "name":"values[][option_ids][]",
              "paramType":"form",
              "dataType":"<%= Const::LONG %>"
            },
            {
              "name":"values[][note]",
              "paramType":"form",
              "dataType":"<%= Const::TEXT %>"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }

      ]
    },
    {
      "path":"/answers/{id}",
      "description":"Operations about answers",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find answer by ID",
          "responseClass":"Answer",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the answer.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete answer",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of answer that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/answers/years' } } %>,
    <%= erb :'shared/_comment.json', { :locals => { :resource => 'answers/{answer_id}' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => 'answers/{answer_id}' } } %>
  ],
  "models":<%= models(params[:api_version], 'Answer', 'Cheer', 'Comment') %>
}
