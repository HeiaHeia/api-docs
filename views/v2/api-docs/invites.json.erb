{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/invites",
  "apis":[
    {
      "path":"/invites",
      "description":"Operations about invites.",
      "operations":[
        {
          "httpMethod":"POST",
          "summary":"Send an invitation for yourself.",
          "responseClass":"",
          "nickname":"create",
          "parameters":[
            {
              "name":"company_code",
              "paramType":"form",
              "required":true,
              "dataType":"string"
            },
            {
              "name":"email",
              "paramType":"form",
              "required":true,
              "dataType":"string"
            },
            {
              "name":"first_name",
              "paramType":"form",
              "required":true,
              "dataType":"string"
            },
            {
              "name":"last_name",
              "paramType":"form",
              "required":true,
              "dataType":"string"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/invites/{id}",
      "description":"Operations about invite",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find invite by ID",
          "responseClass":"Invite",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the invite.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    }
  ],
  "models":<%= models(params[:api_version], 'Invite') %>
}
