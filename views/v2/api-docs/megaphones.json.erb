{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"http://localhost:4567/v2",
  "resourcePath":"/megaphones",
  "apis":[
    {
      "path":"/megaphones",
      "description":"Operations about megaphones",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds megaphones",
          "responseClass":"List[Megaphone]",
          "nickname":"index",
          "parameters":[
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":[
            {
              "code":400,
              "reason":"The request was invalid."
            }
          ]
        }
      ]
    },
    {
      "path":"/megaphones/{id}",
      "description":"Operations about megaphones",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find megaphone by ID",
          "responseClass":"Megaphone",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the megaphone.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Update an existing megaphone",
          "responseClass":"Megaphone",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "description":"ID of megaphone that needs to be updated",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            <%= param_date %>,
            <%= param_notes %>,
            {
              "name":"private",
              "paramType":"form",
              "dataType":"boolean"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete megaphone entry",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of megaphone that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/megaphones/years' } } %>,
    <%= erb :'shared/_comment.json', { :locals => { :resource => 'megaphones/{megaphone_id}' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => 'megaphones/{megaphone_id}' } } %>
  ],
  "models":<%= models('Megaphone', 'Cheer', 'Comment') %>
}
