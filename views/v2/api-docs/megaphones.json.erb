{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/megaphones",
  "apis":[
    {
      "path":"/megaphones",
      "description":"Operations about megaphones",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds megaphones",
          "responseClass":"List[Megaphone]",
          "nickname":"index",
          "parameters":[
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":[
            {
              "code":400,
              "reason":"The request was invalid."
            }
          ]
        },
        {
          "httpMethod":"POST",
          "summary":"Add a new megaphone",
          "responseClass":"Megaphone",
          "nickname":"create",
          "parameters":[
            {
              "name":"organisation_id",
              "paramType":"form",
              "required":true,
              "dataType":"long"
            },
            {
              "name": "notify",
              "description": "Set to false to skip generating feed entries and notifications; update to true later when media uploads are finished",
              "paramType": "form",
              "required": false,
              "dataType": "boolean"
            },
            <%= param_notes required: true %>
          ],
          "errorResponses":<%= responses(400, 403, 404) %>
        }
      ]
    },
    {
      "path":"/megaphones/{id}",
      "description":"Operations about megaphones",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find megaphone by ID",
          "responseClass":"Megaphone",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the megaphone.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Update an existing megaphone",
          "responseClass":"Megaphone",
          "nickname":"update",
          "parameters":[
            {
              "name": "notify",
              "description": "Generates feed entries and notifications when set to true (unless already generated earlier)",
              "paramType": "form",
              "required": false,
              "dataType": "boolean"
            },
            <%= param_notes required: true %>
          ],
          "errorResponses":<%= responses(400, 403, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete megaphone entry",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of megaphone entry that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 403, 404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/megaphones/years' } } %>,
    <%= erb :'shared/_comment.json', { :locals => { :resource => 'megaphones/{megaphone_id}' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => 'megaphones/{megaphone_id}' } } %>
  ],
  "models":<%= models(params[:api_version], 'Megaphone', 'Cheer', 'Comment') %>
}
