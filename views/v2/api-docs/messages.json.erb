{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/messages",
  "apis":[
    {
      "path":"/messages/{id}",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find message by ID",
          "responseClass":"Message",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Mark as read",
          "responseClass":"Message",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    }
  ],
  "models":<%= models(params[:api_version], 'Message') %>
}
