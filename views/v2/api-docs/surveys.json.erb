{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/surveys",
  "apis":[
    {
      "path":"/surveys",
      "description":"Operations about surveys",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Available surveys",
          "responseClass":"List[Survey]",
          "nickname":"surveys_index",
          "parameters":[
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/surveys/{id}",
      "description":"Operations about surveys",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find survey by ID",
          "responseClass":"Survey",
          "nickname":"survey_show",
          "parameters":[],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/surveys/{survey_id}/personal_programs",
      "description":"Operations about personal programs",
      "operations":[
        {
          "httpMethod":"POST",
          "summary":"Add a new personal program",
          "responseClass":"PersonalProgram",
          "nickname":"personal_programs_create",
          "parameters":[
            <%= param_survey_id %>,
            <%= param_program_id %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/surveys/{survey_id}/programs",
      "description":"Operations about programs",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Recommended programs",
          "responseClass":"List[Program]",
          "nickname":"programs_index",
          "parameters":[
            <%= param_survey_id %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    }

  ],
  "models":<%= models(params[:api_version], 'Program', 'PersonalProgram', 'Survey') %>
}
