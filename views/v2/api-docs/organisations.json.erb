{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/organisations",
  "apis":[
    {
      "path":"/organisations",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"List of my organisations",
          "responseClass":"List[Organisation]",
          "nickname":"index",
          "parameters":[
            {
              "name":"coach",
              "description":"When 'true' returns organisations where you coach in.",
              "paramType":"query",
              "dataType":"string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "true"
                ]
              }
            }
          ],
          "errorResponses":<%= responses(400) %>
        },
        {
          "httpMethod":"POST",
          "summary":"Join an organisation",
          "responseClass":"Organisation",
          "nickname":"join",
          "parameters":[
            {
              "name":"code",
              "description":"Company code for the organisation to join.",
              "paramType":"query",
              "dataType":"string"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/organisations/{id}",
      "description":"Operations about organisation",
      "operations":[
        {
          "httpMethod":"DELETE",
          "summary":"Remove organisation membership",
          "responseClass":null,
          "nickname":"unjoin",
          "parameters":[
            {
              "name":"id",
              "description":"The ID of the organisation to unjoin.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"GET",
          "summary":"Find organisation by ID",
          "responseClass":"Organisation",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The ID of the organisation.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    },
    {
      "path":"/organisations/{organisation_id}/teams",
      "description":"Team operations",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"List all teams belonging to given organisation",
          "responseClass":"Group",
          "nickname":"list",
          "parameters":[
            {
              "name":"organisation_id",
              "description":"The ID of the organisation.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(404) %>
        }
      ]
    }
  ],
  "models":<%= models(params[:api_version], 'Group', 'Organisation') %>
}
