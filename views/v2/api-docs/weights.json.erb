{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"http://localhost:4567/v2",
  "resourcePath":"/weights",
  "apis":[
    {
      "path":"/weights",
      "description":"Operations about weights",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds weights",
          "responseClass":"List[Weight]",
          "nickname":"index",
          "parameters":[
            {
              "name":"year",
              "description":"Gets list of entries for given year. Be default it's current year.",
              "paramType":"query",
              "dataType":"int",
              "defaultValue":"2013"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        },
        {
          "httpMethod":"POST",
          "summary":"Add a new weight",
          "responseClass":"Weight",
          "nickname":"create",
          "parameters":[
            {
              "name":"date",
              "description":"Date of the exercise as “YYYY-MM-DD”. Example “2010-04-23”",
              "paramType":"form",
              "required":true,
              "dataType":"Date"
            },
            {
              "name":"notes",
              "paramType":"form",
              "dataType":"text",
              "description":"Informal notes for the weight."
            },
            {
              "name":"value",
              "paramType":"form",
              "dataType":"text",
              "description":"Value should be in unit that set in the user settings (kg or lb)."
            },
            {
              "name":"private",
              "paramType":"form",
              "dataType":"boolean",
              "description":"By default 'true'"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/weights/{id}",
      "description":"Operations about weights",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find weight by ID",
          "responseClass":"Weight",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the weight.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Update an existing weight",
          "responseClass":"Weight",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "description":"ID of weight that needs to be updated",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            {
              "name":"date",
              "description":"Date of the exercise as “YYYY-MM-DD”. Example “2010-04-23”",
              "paramType":"form",
              "dataType":"Date"
            },
            {
              "name":"notes",
              "paramType":"form",
              "dataType":"text",
              "description":"Informal notes for the weight."
            },
            {
              "name":"value",
              "paramType":"form",
              "dataType":"text",
              "description":"Value should be in unit that set in the user settings (kg or lb)."
            },
            {
              "name":"private",
              "paramType":"form",
              "dataType":"boolean",
              "description":"By default 'true'"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete weight entry",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of weight that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_comment.json', { :locals => { :resource => "weights", :param_id => 'weight_id' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => "weights", :param_id => 'weight_id' } } %>
  ],
  "models":{
    "CompactUser":<%= compact_user_model %>,
    "Comment":<%= comment_model %>,
    "Weight":{
      "id":"Weight",
      "properties":{
        "id":{
          "type":"long",
          "required": true
        },
        "date":{
          "type":"Date",
          "required": true
        },
        "user":{
          "type":"CompactUser",
          "required": true
        },
        "url":{
          "type":"string",
          "required": true
        },
        "icon_url":{
          "type":"string",
          "required": true
        },
        "notes":{
          "type": "text",
          "required": true
        },
        "title":{
          "type": "string"
        },
        "description":{
          "type": "text"
        },
        "value":{
          "type": "text",
          "required": true,
          "description": "In unit that set in the user settings (kg or lb)"
        },
        "private":{
          "type":"boolean"
        },
        "cheers_count":{
          "type":"int"
        },
        "cheers_url":{
          "type":"string"
        },
        "cheerable":{
          "type":"boolean",
          "required": true
        },
        "comments_count":{
          "type":"int"
        },
        "comments_url":{
          "type":"string"
        },
        "commentable":{
          "type":"boolean",
          "required": true
        },
        "updated_at":{
          "type":"DateTime",
          "required": true
        },
        "created_at":{
          "type":"DateTime",
          "required": true
        }
      }
    },
    "Cheer":<%= cheer_model %>
  }
}
