{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/weights",
  "apis":[
    {
      "path":"/weights",
      "description":"Operations about weights",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds weights",
          "responseClass":"List[Weight]",
          "nickname":"index",
          "parameters":[
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        },
        <%= erb :'shared/weights/_create.json' %>
      ]
    },
    {
      "path":"/weights/{id}",
      "description":"Operations about weights",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find weight by ID",
          "responseClass":"Weight",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the weight.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Update an existing weight",
          "responseClass":"Weight",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "description":"ID of weight that needs to be updated",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            <%= param_date %>,
            <%= param_notes %>,
            {
              "name":"value",
              "paramType":"form",
              "dataType":"text",
              "description":"Value should be in unit that set in the user settings (kg or lb)."
            },
            {
              "name":"private",
              "paramType":"form",
              "dataType":"boolean",
              "description":"By default 'true'"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete weight entry",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of weight that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/weights/years' } } %>,
    <%= erb :'shared/_comment.json', { :locals => { :resource => 'weights/{weight_id}' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => 'weights/{weight_id}' } } %>
  ],
  "models":<%= models('Weight', 'Cheer', 'Comment') %>
}
