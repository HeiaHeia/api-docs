{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"http://localhost:4567/v2",
  "resourcePath":"/sick_days",
  "apis":[
    {
      "path":"/sick_days",
      "description":"Operations about sick days",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds sick days",
          "responseClass":"List[SickDay]",
          "nickname":"index",
          "parameters":[
            {
              "name":"year",
              "description":"Gets list of entries for given year. Be default it's current year.",
              "paramType":"query",
              "dataType":"int",
              "defaultValue":"2013"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":[
            {
              "code":400,
              "reason":"The request was invalid."
            }
          ]
        },
        {
          "httpMethod":"POST",
          "summary":"Add a new sick day",
          "responseClass":"SickDay",
          "nickname":"create",
          "parameters":[
            {
              "name":"date",
              "description":"Date of the exercise as “YYYY-MM-DD”. Example “2010-04-23”",
              "paramType":"form",
              "required":true,
              "dataType":"Date"
            },
            {
              "name":"notes",
              "paramType":"form",
              "dataType":"text",
              "description":"Informal notes for the sick day."
            },
            {
              "name":"private",
              "description":"By default 'true'",
              "paramType":"form",
              "dataType":"boolean"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/sick_days/{id}",
      "description":"Operations about sick days",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find sick day by ID",
          "responseClass":"SickDay",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the sick day.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Update an existing sick day",
          "responseClass":"SickDay",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "description":"ID of sick day that needs to be updated",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            {
              "name":"date",
              "description":"Date of the exercise as “YYYY-MM-DD”. Example “2010-04-23”",
              "paramType":"form",
              "dataType":"Date"
            },
            {
              "name":"notes",
              "paramType":"form",
              "dataType":"text",
              "description":"Informal notes for the sick day."
            },
            {
              "name":"private",
              "paramType":"form",
              "dataType":"boolean"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete sick day entry",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of sick day that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_comment.json', { :locals => { :resource => "sick_days", :param_id => 'sick_day_id' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => "sick_days", :param_id => 'sick_day_id' } } %>
  ],
  "models":{
    "User":<%= embedded_user_model %>,
    "Comment":<%= comment_model %>,
    "Cheer":<%= cheer_model %>,
    "SickDay":{
      "id":"SickDay",
      "properties":{
        "id":{
          "type":"long",
          "required": true
        },
        "date":{
          "type":"Date",
          "required": true
        },
        "user":{
          "type":"User",
          "required": true
        },
        "url":{
          "type":"string",
          "required": true
        },
        "icon_url":{
          "type":"string",
          "required": true
        },
        "notes":{
          "type": "text",
          "required": true
        },
        "title":{
          "type": "string"
        },
        "description":{
          "type": "text"
        },
        "private":{
          "type":"boolean"
        },
        "cheers_count":{
          "type":"int"
        },
        "cheers_url":{
          "type":"string"
        },
        "cheerable":{
          "type":"boolean",
          "required": true
        },
        "comments_count":{
          "type":"int"
        },
        "comments_url":{
          "type":"string"
        },
        "commentable":{
          "type":"boolean",
          "required": true
        },
        "updated_at":{
          "type":"DateTime",
          "required": true
        },
        "created_at":{
          "type":"DateTime",
          "required": true
        }
      }
    }
  }
}
