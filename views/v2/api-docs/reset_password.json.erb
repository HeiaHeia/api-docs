{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/reset_password",
  "apis":[
    {
      "path":"/reset_password",
      "description":"Operations about reset password",
      "operations":[
        {
          "httpMethod":"POST",
          "summary":"Request password reset. Sends email with reset link to user's email address",
          "responseClass":"",
          "nickname":"create",
          "parameters":[
            {
              "name":"email",
              "paramType":"form",
              "dataType":"string",
              "required":"true"
            }
          ],
          "errorResponses":<%= responses(400) %>
        },
        {
          "httpMethod":"PUT",
          "summary":"Set a new password",
          "responseClass":"",
          "nickname":"update",
          "parameters":[
            {
              "name":"token",
              "paramType":"form",
              "dataType":"string",
              "required":"true"
            },
            {
              "name":"password",
              "paramType":"form",
              "dataType":"string",
              "required":"true",
              "description": "at least 10 chars"
            }
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    }
  ]
}
