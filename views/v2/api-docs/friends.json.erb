{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/friends",
  "apis":[
    {
      "path":"/friends",
      "description":"Operations about friends",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"My friends",
          "responseClass":"List[CompactUser]",
          "nickname":"index",
          "parameters":[
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/friends/{user_id}",
      "description":"Operations about friends and friend requests",
      "operations":[
        {
          "httpMethod":"PUT",
          "summary":"Create or accept friendship requests",
          "responseClass":"CompactUser",
          "nickname":"create",
          "parameters":[
            <%= param_user_id %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Decline friendship requests or delete users from friends",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            <%= param_user_id %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/friends/requests",
      "description":"List of friend requests",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"My friend requests",
          "responseClass":"List[CompactUser]",
          "nickname":"requests_index",
          "parameters":[
            {
              "name":"status",
              "description": "<pre>pending</pre> when you sent the friend request <pre>requested</pre> when friend request was sent to you",
              "required":true,
              "dataType":"string",
              "paramType":"query",
              "defaultValue":"requested",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "requested",
                  "pending"
                ]
              }
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    }
  ],
  "models":<%= models('CompactUser') %>
}
