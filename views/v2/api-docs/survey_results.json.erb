{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/survey_results",
  "apis":[
    {
      "path":"/survey_results",
      "description":"Operations about survey results",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Finds survey results",
          "responseClass":"List[SurveyResult]",
          "nickname":"index",
          "parameters":[
            <%= param_year %>,
            <%= param_page %>,
            <%= param_per_page %>,
            {
              "name": "survey_id",
              "paramType": "form",
              "dataType": "long",
              "required": false,
              "description": "Return only results associated with given survey. The year parameter is ignored when survey_id is present."
            }
          ],
          "errorResponses":<%= responses(400) %>
        },
        {
          "httpMethod":"POST",
          "summary":"Add a new survey result",
          "responseClass":"SurveyResult",
          "nickname":"create",
          "parameters":[
            {
              "name":"survey_id",
              "paramType":"form",
              "dataType":"long",
              "required":true
            },
            {
              "name":"planned_survey_id",
              "paramType":"form",
              "dataType":"long"
            },
            {
              "name":"answers[][question_id]",
              "paramType":"form",
              "dataType":"<%= Const::LONG %>",
              "required":true
            },
            {
              "name":"answers[][option_ids][]",
              "paramType":"form",
              "dataType":"<%= Const::LONG %>",
              "required":true
            },
            {
              "name":"answers[][note]",
              "paramType":"form",
              "dataType":"<%= Const::TEXT %>"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }

      ]
    },
    {
      "path":"/survey_results/{id}",
      "description":"Operations about survey results",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find survey result by ID",
          "responseClass":"SurveyResult",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the survey result.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete survey result",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of survey result that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    <%= erb :'shared/_years.json', { :locals => { :resource => '/survey_results/years' } } %>,
    <%= erb :'shared/_comment.json', { :locals => { :resource => 'survey_results/{survey_result_id}' } } %>,
    <%= erb :'shared/_cheer.json', { :locals => { :resource => 'survey_results/{survey_result_id}' } } %>
  ],
  "models":<%= models(params[:api_version], 'SurveyResult', 'Cheer', 'Comment') %>
}
