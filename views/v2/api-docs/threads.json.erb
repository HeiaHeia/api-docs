{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"http://localhost:4567/v2",
  "resourcePath":"/threads",
  "apis":[
    {
      "path":"/threads",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"List of threads",
          "responseClass":"List[Thread]",
          "nickname":"index",
          "parameters":[
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/threads/{id}",
      "description":"Operations about threads",
      "operations":[
        {
          "httpMethod":"PUT",
          "summary":"Update an existing thread",
          "responseClass":"Thread",
          "nickname":"update",
          "parameters":[
            {
              "name":"id",
              "description":"ID of thread that needs to be updated",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            {
              "name":"unread",
              "paramType":"form",
              "dataType":"boolean"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/threads/unread",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"List of unread threads",
          "responseClass":"List[Thread]",
          "nickname":"unread_index",
          "parameters":[
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(400) %>
        }
      ]
    },
    {
      "path":"/threads/{user_id}/messages",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Get list of messages from thread.",
          "responseClass":"List[Message]",
          "nickname":"messages_index",
          "parameters":[
            {
              "name":"user_id",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            },
            <%= param_page %>,
            <%= param_per_page %>
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"POST",
          "summary":"Create a new message",
          "responseClass":"Message",
          "nickname":"create",
          "parameters":[
            {
              "name":"id",
              "paramType":"path",
              "required":true,
              "dataType":"Date"
            },
            {
              "name":"body",
              "paramType":"form",
              "required":true,
              "dataType":"text"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    }
  ],
  "models":<%= models('Thread', 'Message') %>
}
