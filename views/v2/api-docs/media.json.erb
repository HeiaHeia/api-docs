{
  "apiVersion":"2",
  "swaggerVersion":"1.2",
  "basePath":"<%= Const::BASE_URL %>/v2",
  "resourcePath":"/media",
  "apis":[
    {
      "path":"/media",
      "description":"Operations about media",
      "operations":[
        {
          "httpMethod":"POST",
          "summary":"Add a new media",
          "responseClass":"Media",
          "nickname":"create",
          "parameters":[
            {
              "name":"entry_id",
              "paramType":"form",
              "required":true,
              "dataType":"long"
            },
            {
              "name":"entry_type",
              "required":true,
              "dataType":"string",
              "paramType":"form",
              "defaultValue":"regular",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "FreeEntry",
                  "Megaphone",
                  "TrainingLog",
                  "Weight",
                  "WellnessEntry"
                ]
              }
            },
            {
              "name":"file",
              "paramType":"body",
              "dataType":"file",
              "description":"The file, support only .JPEG and .PNG format."
            },
            <%= param_notes(dataType: Const::STRING) %>
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    },
    {
      "path":"/media/{id}",
      "description":"Operations about media",
      "operations":[
        {
          "httpMethod":"GET",
          "summary":"Find media by ID",
          "responseClass":"Media",
          "nickname":"show",
          "parameters":[
            {
              "name":"id",
              "description":"The id of the media.",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(404) %>
        },
        {
          "httpMethod":"DELETE",
          "summary":"Delete media",
          "responseClass":"void",
          "nickname":"destroy",
          "parameters":[
            {
              "name":"id",
              "description":"ID of media that needs to be deleted",
              "paramType":"path",
              "required":true,
              "dataType":"long"
            }
          ],
          "errorResponses":<%= responses(400, 404) %>
        }
      ]
    }
  ],
  "models":<%= models(params[:api_version], 'Media') %>
}
